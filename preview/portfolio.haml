    var xPos = $('.portfolio').scrollLeft(),
          portfolio = document.getElementsByClassName('portfolio')[0],
          maxScroll = portfolio.scrollWidth - portfolio.clientWidth;
    if(xPos >= maxScroll) {
      $('.portfolio').scrollLeft(0);
    }
    else {
      $('.portfolio').scrollLeft(xPos + width/1000);
    }
  }, 20);
