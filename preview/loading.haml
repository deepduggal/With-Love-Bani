:css
  .loading {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    font-family: 'Pacifico';
    height: calc(100% - 4rem - 5px);
    width: 100%;
    background: white;
    
    h1 {
      position: relative;
      top: calc(50% - 1em);
      left: calc(50% - 3.42em);
      width: 6.84em;
      font-style: italic;
      font-size: 4em;
      
      .text {
        float: left;
      }
    }
  }
%section.loading.animated.fadeIn
  %h1.animated.fadeIn
    .text.animated.slideInLeft With&nbsp;
    .text.animated.slideInDown Love,
    .text.animated.slideInRight Bani