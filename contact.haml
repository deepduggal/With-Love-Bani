:css
  .contact {
    height: calc(100%);
    width: calc(100% - 1em);
    padding: 0.5em;
    background: white;
    float: left;
  }
  .contact > form h1 {
    min-height: 1em;
    width: 75%;
    margin: 0.5em 12.5% 0 12.5%;
    padding: 0.25em;
    border-radius: 5px;
    float: left;
    text-align: center;
  }
  .contact > form input, .contact > form textarea {
    min-height: 1em;
    width: 75%;
    margin: 0.5em 12.5% 0 12.5%;
    padding: 0.25em;
    border-radius: 5px;
    border: 2px black solid;
    float: left;
    background: black;
    font-family: 'Lato', Helvetica, Arial, sans-serif;
    font-size: 1.5rem;
    color: white;
    outline: none;
    -moz-transition: all 0.3s;
    -webkit-transition: all 0.3s;
    transition: all 0.3s;
  }
  .contact > form input:focus, .contact > form input:active, .contact > form textarea:focus, .contact > form textarea:active {
    border: 2px black solid;
    background: white;
    color: black;
  }
  .contact > form input[type="submit"] {
    border: 2px black solid;
    background: white;
    color: black;
  }
  .contact > form input[type="submit"]:hover {
    background: black;
    color: white;
  }
.contact.animated.fadeIn
